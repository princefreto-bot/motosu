# =================================
# MOTOSU AGENCIES - Variables d'environnement
# =================================
# Copiez ce fichier en .env et remplissez les valeurs

# MongoDB Atlas Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/motosu?retryWrites=true&w=majority

# JWT Secret Key (CHANGEZ CETTE VALEUR)
JWT_SECRET=votre-cle-secrete-jwt-ultra-securisee-64-chars-minimum

# Environment
NODE_ENV=production

# Base URL (production)
APP_URL=https://motosu.onrender.com

# PayDunya (PRODUCTION)
# Récupérez ces clés dans PayDunya Dashboard > Intégrations/API
PAYDUNYA_API_KEY=your_paydunya_token
PAYDUNYA_API_SECRET=your_paydunya_private_key
PAYDUNYA_MASTER_KEY=your_paydunya_master_key
PAYDUNYA_MODE=production
PAYDUNYA_IPN_URL=https://motosu.onrender.com/api/paydunya/ipn
# Optional override
PAYDUNYA_BASE_URL=https://app.paydunya.com/api/v1

# Port (Render le définit automatiquement)
PORT=3000
